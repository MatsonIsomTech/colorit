        {{ redirectInput('palette/settings/general') }}
        {{ csrfInput() }}

        {% namespace 'settings' %}

        	{{ forms.textField({
	            label: 'Name'|t('palette'),
	            instructions: 'Give a name to these preset field settings '|t('palette'),
	            id: 'pluginName',
	            name: 'pluginName',
	            placeholder: '',
	            value: '',
	            errors: false,
	            first: true
	        }) }}

	        <hr>

			{# {{ palette.settingsHtml | raw }} #}

	        <input type="submit" class="btn submit" value="{{ 'Save'|t('palette') }}">

		{% endnamespace %}

