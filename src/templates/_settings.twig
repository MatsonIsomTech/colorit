{% import "_includes/forms" as forms %}

{{ forms.selectField({
    label: 'Type'|t('styleit'),
    instructions: 'What would you like to validate.'|t('styleit'),
    id: 'type',
    name: 'type',
    value: field.type,
    options: field.types,
    errors: field.getErrors('type'),
    toggle: true
}) }}

<div id="custom" class="{{ field.type != 'custom' ? 'hidden' }}">

    {{ forms.textField({
        label: 'Regex'|t('styleit'),
        instructions: 'Validate this field with a custom regex rule.'|t('styleit'),
        id: 'regex',
        name: 'regex',
        value: field.regex,
        errors: field.getErrors('regex')
    }) }}

</div>

{{ forms.textField({
    label: 'Validation Message'|t('styleit'),
    instructions: 'Override the default validation message displayed on failed validation.'|t('styleit'),
    id: 'message',
    name: 'message',
    value: field.message,
    errors: field.getErrors('message')
}) }}

{{ forms.textField({
    label: 'Placeholder'|t('styleit'),
    instructions: 'Override the default input placeholder.'|t('styleit'),
    id: 'placeholder',
    name: 'placeholder',
    value: field.placeholder,
    errors: field.getErrors('placeholder')
}) }}



